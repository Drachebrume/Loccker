<div class="modal fade" id="resetPassword" tabindex="-1" aria-labelledby="resetPasswordLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="resetPasswordLabel">Réinitialisez votre mot de passe</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form class="g-3" method="POST" action="auth/requestResetPassword">
          <!-- ajouter class is-invalid -->
          <div class="row m-4">
            <label for="validationCompany" class="form-label col-sm-6">Mail <span class="text-danger">*</span></label>
            <div class="col-sm-6">
              <input type="email" name="email" class="form-control" id="email" aria-describedby="validationUsernameFeedback" required></div>
            </div>
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
          <div class="row m-4">
            <div class="mx-auto text-center">
              <button class="btn btn-purple" type="submit">Réinitialiser</button>
            </div>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>