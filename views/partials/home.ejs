 <div class="row bigBlock">
   <div class="mx-auto customToastContainer">
    <% if ( status ) { %>
      <% if ( status === 'created' ) { %>
        <div class="toast mx-auto" role="alert" aria-live="assertive" aria-atomic="true" data-autohide="false">
          <div class="toast-header">
            <i class="fas fa-check text-success"></i>
            <strong class="ms-2 me-auto text-success">Compte créé !</strong>
            <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
          </div>
          <div class="toast-body">
            Votre compte a été créé, vous pouvez maintenant vous connecter
          </div>
        </div>
      <% } %>
      <% if ( status === 'forbidden' ) { %>
        <div class="toast mx-auto" role="alert" aria-live="assertive" aria-atomic="true" data-bs-autohide="false">
          <div class="toast-header text-danger">
            <i class="fas fa-exclamation-triangle"></i>
            <strong class="me-auto ms-2">Accès refusé</strong>
            <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
          </div>
          <div class="toast-body">
            Vous n'êtes pas autorisé à accéder à cette addresse.
          </div>
        </div>
      <% } %>
      <% if ( status === 'logout' ) { %>
        <div class="toast mx-auto" role="alert" aria-live="assertive" aria-atomic="true" data-bs-autohide="false">
          <div class="toast-header text-danger">
            <i class="fas fa-exclamation-triangle"></i>
            <strong class="me-auto ms-2">Déconnexion</strong>
            <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
          </div>
          <div class="toast-body">
            Vous avez été déconnecté.
          </div>
        </div>
      <% } %>
      <% if ( status === 'notLogged' ) { %>
        <div class="toast mx-auto" role="alert" aria-live="assertive" aria-atomic="true" data-bs-autohide="false">
          <div class="toast-header text-danger">
            <i class="fas fa-exclamation-triangle"></i>
            <strong class="me-auto ms-2">Accès refusé</strong>
            <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
          </div>
          <div class="toast-body">
            Vous devez être connecté pour accéder à ce contenu.
          </div>
        </div>
      <% } %>
      <% if ( status === 'loginError' ) { %>
        <div class="toast mx-auto" role="alert" aria-live="assertive" aria-atomic="true" data-bs-autohide="false">
          <div class="toast-header text-danger">
            <i class="fas fa-exclamation-triangle"></i>
            <strong class="me-auto ms-2">Connexion refusée</strong>
            <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
          </div>
          <div class="toast-body">
            L'identifiant ou le mot de passe sont incorrects. 
          </div>
        </div>
      <% } %>
      <% if ( status === 'loginError' ) { %>
        <div class="toast mx-auto" role="alert" aria-live="assertive" aria-atomic="true" data-bs-autohide="false">
          <div class="toast-header text-danger">
            <i class="fas fa-exclamation-triangle"></i>
            <strong class="me-auto ms-2">Compte supprimé</strong>
            <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
          </div>
          <div class="toast-body">
            Votre compte a bien été supprimé, au revoir !
          </div>
        </div>
      <% } %>
    <% } %></div>
    <div class="row">
      <div class="col-sm-6">
        <div class="row">
          <div class="col-sm-8 mx-auto">
            <div class="card border-0 mainCard">
              <div class="card-body">
                <h1 class="Btitle text-purple">Vos données<br>accessibles partout</h1>
                <p>blablabla on fous des icones et tout </p>
                <a class="btn btn-purple" href="/register">Commencer</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>  
 </div>